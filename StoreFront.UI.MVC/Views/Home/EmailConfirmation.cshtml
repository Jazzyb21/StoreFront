@model StoreFront.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Email Confirmation";
}

@section styles {
    <style>

        #mainContainer {
            height: 20em;
            width: 50%;
            margin-top: 20px;
            margin-bottom: 20px;
            border: 5px solid #7ABFB3;
            box-shadow: 12px 12px 2px 1px rgba(0, 0, 0, .2);
            text-align: center;
            padding: 15px 10px;
        }


    </style>
    
    }

<div class="container" id="mainContainer">
    <div class="row">
        <div class="col-md-12 justify-content-center">
            <h2>@ViewBag.Title</h2>
            <h4>We recieved the following message: </h4>
            <p>@Model.Message</p>
            <h4>We will respond as soon as possible to @Model.Email . Thank you for contacting us!</h4>
        </div>
    </div>
</div>
 