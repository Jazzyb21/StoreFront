@model StoreFront.UI.MVC.Models.RoleViewModel

@{
    ViewBag.Title = "Add New Role";
}

@section styles {
    <style>
        .createRow{
            padding-bottom: 8em;
        }
    </style>
    }


<div class="container rolesContainer">
    <div class="row createRow">
        <div class="col-md-6 offset-md-3 text-center mt-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <h2>@ViewBag.Title</h2>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Role Name" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Create" class="btn btn-default btn-block" />
                    </div>
                </div>

            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
